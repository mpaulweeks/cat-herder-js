{
  "name": "cat-herder-js",
  "version": "1.0.0",
  "description": "Reimplementation of cat-herder",
  "scripts": {
    "shared": "cd shared && npm i && npm build",
    "install-be": "cd be && npm i",
    "install-fe": "cd fe && yarn install",
    "install": "npm-run-all shared install-be install-fe",
    "build-be": "cd be && npm run build",
    "build-fe": "cd fe && yarn build",
    "build": "npm-run-all shared build-be build-fe",
    "test-shared": "cd shared && npm run test",
    "test-be": "cd be && npm run test",
    "test-fe": "cd fe && yarn test",
    "test": "npm-run-all test-shared test-be test-fe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpaulweeks/cat-herder-js.git"
  },
  "author": "mpaulweeks",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mpaulweeks/cat-herder-js/issues"
  },
  "homepage": "https://github.com/mpaulweeks/cat-herder-js#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
